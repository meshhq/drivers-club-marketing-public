
{% macro benefit(title, detail, alignment, icon) %}
<div class="col-xs-12 col-sm-4 col-md-4 benefit-item-col" align="{{ alignment }}">
    <div class="benefit-content-container">
        <div class="benefit-image-container">
            <i class="em {{icon}}"></i>
        </div>
        <h4 class="benefit-title">
            {{ title }}
        </h4>
        <p class="benefit-detail">
            {{ detail}}
        </p>
    </div>
</div>
{% endmacro %}

